# Backend Production Environment Variables
# Copy this file to .env for production

# Server Configuration
PORT=5000
NODE_ENV=production

# Firebase Admin SDK (LEGACY - no longer used at runtime)
# These are kept only for historical reference and should not be
# required for new deployments. Do not wire new code to these.
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="your-private-key-here"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Auth rate limit (requests per 15 min per IP for /api/auth)
AUTH_RATE_LIMIT_MAX=50

# Logging (optional: debug, info, warn, error)
# LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database - MongoDB Atlas
# Option 1: Full connection string (recommended)
MONGODB_URI=mongodb+srv://<db_username>:<db_password>@cluster0.i8n2lco.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0

# Option 2: Build from components (if MONGODB_URI not set)
MONGODB_USERNAME=your_atlas_username
MONGODB_PASSWORD=your_atlas_password
MONGODB_CLUSTER=cluster0.i8n2lco.mongodb.net
MONGODB_DATABASE=shef-lms

# Database name override (used with MONGODB_URI)
MONGO_DB_NAME=shef-lms

# Direct connection string (no SRV) - use if Docker has DNS issues
# MONGODB_URI_STANDARD=mongodb://user:pass@host1:27017,host2:27017/db?ssl=true&replicaSet=...

# Email Configuration (Optional for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Application URL
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com

# Zoom API Configuration
# Get these from https://marketplace.zoom.us/ → Develop → Build App → Server-to-Server OAuth
ZOOM_ACCOUNT_ID=your_zoom_account_id_here
ZOOM_CLIENT_ID=your_zoom_client_id_here
ZOOM_CLIENT_SECRET=your_zoom_client_secret_here

# YouTube API Configuration
# Get these from https://console.developers.google.com/ → Create Project → Enable YouTube Data API v3
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:5000/auth/youtube/callback
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token_here
